import java.util.*;
class killsum
{
    public static void main(String[] args)
    {
        Scanner sc=new Scanner(System.in);
        int num=sc.nextInt();
        int a=1;
        while(a<=num)
        {
            a=a*2;
        }
        a=a/2;
        int res=(num-a)*2+1;
        System.out.print(res);
    }
}
